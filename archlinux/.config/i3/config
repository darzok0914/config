# i3 config file (v4)

set $mod Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:DejaVu Sans Mono 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# keybindings

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# show the scratchpad
bindsym $mod+d scratchpad show
bindsym $mod+Shift+d move scratchpad

# kill focused window
bindsym $mod+Shift+B kill

# rofi
bindsym $mod+i exec "rofi -show run"
bindsym $mod+k exec "rofi -show window"

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
#bindsym $mod+u exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+c focus left
bindsym $mod+t focus down
bindsym $mod+s focus up
bindsym $mod+r focus right

# # alternatively, you can use the cursor keys:
# bindsym $mod+Left focus left
# bindsym $mod+Down focus down
# bindsym $mod+Up focus up
# bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+C move left
bindsym $mod+Shift+T move down
bindsym $mod+Shift+S move up
bindsym $mod+Shift+R move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Ctrl+c resize grow width 10 px or 10 ppt
bindsym $mod+Ctrl+t resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+s resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+r resize shrink width 10 px or 10 ppt

# split in horizontal orientation
bindsym $mod+v split h

# split in vertical orientation
bindsym $mod+o split v

# enter fullscreen mode for the focused container
bindsym $mod+e fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+u layout stacking
bindsym $mod+eacute layout tabbed
bindsym $mod+p layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+quotedbl workspace 1
bindsym $mod+guillemotleft workspace 2
bindsym $mod+guillemotright workspace 3
bindsym $mod+parenleft workspace 4
bindsym $mod+parenright workspace 5
bindsym $mod+at workspace 6
bindsym $mod+plus workspace 7
bindsym $mod+minus workspace 8
bindsym $mod+slash workspace 9
bindsym $mod+asterisk workspace 0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+guillemotleft move container to workspace 2
bindsym $mod+Shift+guillemotright move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 0

bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume 0 +5%; pactl set-sink-volume 2 +5%"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume 0 -5%; pactl set-sink-volume 2 -5%"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute 0 toggle; pactl set-sink-mute 1 toggle"
bindsym XF86MonBrightnessUp exec --no-startup-id "xbacklight -inc 10"
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight -dec 10"
bindsym XF86Sleep exec --no-startup-id "systemctl suspend"
bindsym Print exec "scrot /tmp/img_$(date +%m%d%y_%H%M%S).png"
bindsym --release Shift+Print exec "scrot -s /tmp/img_$(date +%m%d%y_%H%M%S).png"
bindsym $mod+Print exec "scrot -u /tmp/img_$(date +%m%d%y_%H%M%S).png"
bindsym Mod4+l exec --no-startup-id "i3lock -ti ~/pictures/wallpapers/Autumn-mountain-wallpaper-HD-free-download-blured.png"
bindsym Mod4+s exec --no-startup-id "i3lock -ti ~/pictures/wallpapers/Autumn-mountain-wallpaper-HD-free-download-blured.png && systemctl suspend"
bindsym Mod4+h exec --no-startup-id "i3lock -ti ~/pictures/wallpapers/Autumn-mountain-wallpaper-HD-free-download-blured.png && systemctl hibernate"

# reload the configuration file
bindsym $mod+Shift+X reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+O restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+P exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# colors
set_from_resource $color_fg color_fg
set_from_resource $color_bg0 color_bg0
set_from_resource $color_bg1 color_bg1
set_from_resource $color_bg2 color_bg2
set_from_resource $color_bg3 color_bg3
set_from_resource $color_bg4 color_bg4
set_from_resource $color_bg5 color_bg5
set_from_resource $color_bg_red color_bg_red
set_from_resource $color_bg_green color_bg_green
set_from_resource $color_bg_blue color_bg_blue
set_from_resource $color_bg_purple color_bg_purple
set_from_resource $color_red color_red
set_from_resource $color_yellow color_yellow
set_from_resource $color_green color_green
set_from_resource $color_cyan color_cyan
set_from_resource $color_blue color_blue
set_from_resource $color_purple color_purple
set_from_resource $color_grey color_grey

# class                 border   backgr. text    indicator child_border
client.focused          #5dbbc1 #5dbbc1 #7e8294 #a0c980 #5dbbc1
client.focused_inactive #394957 #394957 #7e8294 #a0c980 #394957
client.unfocused #3f445b #3f445b #7e8294 #3f445b #3f445b
client.urgent #ec7279 #ec7279 #7e8294 #ec7279 #ec7279
client.placeholder #d38aea #d38aea #7e8294 #d38aea #d38aea

default_border pixel 1
default_floating_border pixel 1

title_align center

#hide_edge_borders both

workspace_auto_back_and_forth yes

exec --no-startup-id compton
exec --no-startup-id sh ~/.fehbg
exec --no-startup-id xset r rate 200 30
exec --no-startup-id xset -dpms

exec --no-startup-id ~/bin/restart-polybar
exec --no-startup-id /usr/lib/xfce4/notifyd/xfce4-notifyd
exec --no-startup-id redshift-gtk
