label-song-ellipsis = true

[module/date]
type = internal/date
interval = 5

date = %a %b %d

time = %H:%M

format-prefix = 
format-prefix-foreground = ${colors.color12}

label = " %date%, %time%"
label-foreground = ${colors.color4}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${colors.color14}

label-muted = 
label-muted-foreground = ${colors.color15}

[module/temperature]
type = internal/temperature
