[colors]

transparent = #0000
background = ${self.black}
foreground = #dfdfdf
foreground-alt = #555

; one-dark colorscheme
black        = #282c34
white        = #abb2bf
red          = #be5046
green        = #98c379
yellow       = #d19a66
blue         = #61afef
light-blue   = #638fb3
magenta      = #c678dd
cyan         = #56b6c2
grey    = #4b5263

[bar/default]

monitor = HDMI2
monitor-fallback = eDP1
monitor-strict = false
override-redirect = false
bottom = false
fixed-center = true
width = 100%
height = 22
offset-x = 0
offset-y = 0
background = ${colors.black}
foreground = ${colors.white}
radius = 0.0
line-size = 0
line-color = #f00
border-size = 0
border-color = #00000000
padding = 0
padding-right = 2
;module-margin = 0
module-margin-left = 2
module-margin-right = 2
font-0 = DejaVuSans:style=bold:size=10;2
font-1 = fontawesome:style=bold;3
modules-left = i3
modules-center =
modules-right = filesystem pulseaudio wlan eth cpu memory temperature battery date notification user powermenu
separator =
dim-value = 0.8
wm-name =
locale = en_US.UTF-8
tray-position = right
tray-detached = false
tray-maxsize = 20
tray-transparent = false
