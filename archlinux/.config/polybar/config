secondary      = ${colors.color6}

[bar/default]
width = 100%
height = 27
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #000

border-size = 0
;border-color = ${colors.background-alt}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = Cantarell:style=Bold:pixelsize=12;2
font-1 = Font Awesome 5 Free Solid:style=Solid:pixelsize=14;3

modules-left = powermenu xwindow
modules-center = i3
modules-right = hostname pulseaudio date

tray-position = right
tray-padding = 2
;tray-background = ${colors.color8}

;wm-restack = i3
;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 200

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

ws-icon-default = ♟
ws-icon0 = 1:·
ws-icon1 = 2::
ws-icon2 = 3:·:
ws-icon3 = 4:::
ws-icon4 = 5::·:
ws-icon5 = 6::::
ws-icon6 = 7:·:::
ws-icon7 = 8:::::
ws-icon8 = 9:::·::
ws-icon9 = 0::::::

label-focused = %name%
label-focused-foreground = ${colors.color4}
label-focused-background = ${colors.color8}
label-focused-underline = ${colors.color12}
label-focused-padding = 5

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.color12}
;label-unfocused-background = ${colors.color2}
;label-unfocused-underline = ${colors.color7}
label-unfocused-padding = 5

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-foreground = ${colors.color7}
label-urgent-background = ${colors.color1}
label-urgent-underline = ${colors.color9}
label-urgent-padding = 5

[module/mpd]
type = internal/mpd
