#!/bin/zsh

set -e

CONFIG_FILES=("\
/home/phaazon/.config/nvim/init.vim
/home/phaazon/.config/nvim/plug.vim
/home/phaazon/.config/nvim/coc-settings.json
/home/phaazon/.config/polybar/config
/home/phaazon/.config/bspwm/bspwmrc
/home/phaazon/.config/sxhkd/sxhkdrc
/home/phaazon/.config/zsh/keybindings.sh
/home/phaazon/.config/zsh/plugins.txt
/home/phaazon/.config/alacritty/alacritty.yml
/home/phaazon/.config/dunst/dunstrc
/home/phaazon/.config/starship.toml"
)

CHOICE=$(dmenu-wrapper "Edit configuration" <<< "${CONFIG_FILES[@]}")

if [[ -e $CHOICE ]]; then
  nvim $CHOICE
fi
