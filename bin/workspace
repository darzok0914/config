#!/bin/sh

if [[ $# == 0 ]]; then
  echo -e "\x00prompt\x1fSet workspace name"
elif [[ $# == 1 ]]; then
  current_ws=$(i3-msg -t get_workspaces \
    | jq '.[] | select(.focused==true).name' \
    | cut -d'"' -f2 \
    | cut -d':' -f1
  )

  i3-msg 'rename workspace to "'$current_ws:$1'"' &> /dev/null
fi
