Plug 'tpope/vim-surround'
let g:surround_no_mappings = 1

nmap <localleader>ds  <Plug>Dsurround
nmap <localleader>cs  <Plug>Csurround
nmap <localleader>cS  <Plug>CSurround
nmap <localleader>ys  <Plug>Ysurround
nmap <localleader>yS  <Plug>YSurround
nmap <localleader>yss <Plug>Yssurround
nmap <localleader>ySs <Plug>YSsurround
nmap <localleader>ySS <Plug>YSsurround
xmap <localleader>S   <Plug>VSurround
xmap <localleader>gS  <Plug>VgSurround
